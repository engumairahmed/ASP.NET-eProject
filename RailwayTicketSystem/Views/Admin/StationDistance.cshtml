@using RailwayTicketSystem.Models.ViewModels;
@{
    Layout = "_AdminLayout";
}
@model DistanceAddModel

<div class="container">
    <h1>Add Station Distances</h1>
</div>

@if (TempData["Success"] != null)
{

    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container mt-3">
    <form asp-action="AddDistance" asp-controller="Admin" method="post" class="justify-content-center">

        <div class="row w-75">
            <div class="form-group col">
                <label asp-for="SD.FromStationId" class="control-label"></label>
                <select asp-for="SD.FromStationId" asp-items="@(new SelectList(Model.Stations, "StationId", "StationName"))" class="form-control">
                    <option value="">-- Select Station --</option>
                </select>
                <span asp-validation-for="SD.FromStationId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="SD.ToStationId" class="control-label"></label>
                <select asp-for="SD.ToStationId" asp-items="@(new SelectList(Model.Stations, "StationId", "StationName"))" class="form-control">
                    <option value="">-- Select Station --</option>
                </select>
                <span asp-validation-for="SD.ToStationId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="SD.Distance"></label>
                <input asp-for="SD.Distance" class="form-control" />
                <span asp-validation-for="SD.Distance"></span>
            </div>
        </div>

        <div class="row w-75 mt-4">
            <div class="col">
                <input type="submit" value="Save" class="btn btn-lg btn-secondary col" />
            </div>
        </div>

    </form>
</div>
