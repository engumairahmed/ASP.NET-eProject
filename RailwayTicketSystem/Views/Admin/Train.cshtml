@{
    Layout = "_AdminLayout";
}
@model TrainDetail

<div class="container">
    <h1>Add Train</h1>
</div>

@if (TempData["Success"] != null)
{
   
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container mt-3">
    <form asp-action="AddTrain" asp-controller="Admin" method="post" class="justify-content-center">

        <div class="row w-75">
            <div class="col">
                <label asp-for="TrainName"></label>
                <input asp-for="TrainName" class="form-control"/>
                <span asp-validation-for="TrainName"></span>            
            </div>
            <div class="col">
                <label asp-for="TrainNo"></label>
                <input asp-for="TrainNo" class="form-control" />
                <span asp-validation-for="TrainNo"></span>
            </div>
        </div>

        <div class="row w-75 mt-3">
            <div class="col">
                <label asp-for="NumberOfCompartments"></label>
                <input asp-for="NumberOfCompartments" class="form-control" />
                <span asp-validation-for="NumberOfCompartments"></span>
            </div>
            <div class="col">
                <label asp-for="AC1"></label>
                <input asp-for="AC1" class="form-control" />
                <span asp-validation-for="AC1"></span>
            </div>
        </div>

        <div class="row w-75 mt-3">
            <div class="col">
                <label asp-for="AC2"></label>
                <input asp-for="AC2" class="form-control" />
                <span asp-validation-for="AC2"></span>
            </div>
            <div class="col">
                <label asp-for="AC3"></label>
                <input asp-for="AC3" class="form-control" />
                <span asp-validation-for="AC3"></span>
            </div>
        </div>

        <div class="row w-75 mt-3">
            <div class="col">
                <label asp-for="Sleeper"></label>
                <input asp-for="Sleeper" class="form-control" />
                <span asp-validation-for="Sleeper"></span>
            </div>
            <div class="col">
                <label asp-for="General"></label>
                <input asp-for="General" class="form-control" />
                <span asp-validation-for="General"></span>
            </div>
        </div>
        <div class="row w-75 mt-3">     
            <div class="col">
                <input type="submit" value="Add" class="btn btn-lg btn-secondary col" />
            </div>
        </div>

    </form>
</div>