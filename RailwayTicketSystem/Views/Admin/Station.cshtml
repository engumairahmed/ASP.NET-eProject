@using RailwayTicketSystem.Models.ViewModels;
@{
    Layout = "_AdminLayout";
}
@model Station

<div class="container">
    <h1>Add Train</h1>
</div>

@if (TempData["Success"] != null)
{

    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container mt-3">
    <form asp-action="AddStation" asp-controller="Admin" method="post" class="justify-content-center">

        <div class="row w-75">
            <div class="col">
                <label asp-for="StationName"></label>
                <input asp-for="StationName" class="form-control" />
                <span asp-validation-for="StationName"></span>
            </div>
            <div class="col">
                <label asp-for="StationCode"></label>
                <input asp-for="StationCode" class="form-control" />
                <span asp-validation-for="StationCode"></span>
            </div>
        </div>

        <div class="row w-75">
            <div class="col">
                <label asp-for="RailwayDivisionName"></label>
                <input asp-for="RailwayDivisionName" class="form-control" />
                <span asp-validation-for="RailwayDivisionName"></span>
            </div>
            <div class="col">
                <label asp-for="Sequence"></label>
                <input asp-for="Sequence" class="form-control" />
                <span asp-validation-for="Sequence"></span>
            </div>
        </div>
       

        <div class="row w-75 mt-4">
            <div class="col">
                <input type="submit" value="Add Station" class="btn btn-lg btn-secondary col" />
            </div>
        </div>

    </form>
</div>


